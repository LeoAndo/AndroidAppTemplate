<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.AndroidAppTemplate" parent="" />

    <style name="ShapeAppearanceOverlay.AndroidAppTemplate.CircleImageView">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeBottomRight">28%</item>
    </style>

    <style name="ShapeAppearanceOverlay.AndroidAppTemplate.BottomSheetDialog">
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>


    <style name="Widget.AndroidAppTemplate.Divider" parent="" />

    <style name="Widget.AndroidAppTemplate.Divider.Horizontal">
        <item name="android:layout_height">0.33dp</item>
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

    <style name="Widget.AndroidAppTemplate.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@array/progress_colors</item>
        <item name="indeterminateAnimationType">contiguous</item>
        <item name="indicatorSize">80dp</item>
    </style>

    <style name="Widget.AndroidAppTemplate.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.AndroidAppTemplate.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView" />

    <style name="Widget.AndroidAppTemplate.AutoCompleteTextView.DropDown">
        <item name="android:editable">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.AndroidAppTemplate.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.AndroidAppTemplate.BottomSheetDialog
        </item>
    </style>

    <style name="Widget.AndroidAppTemplate.BottomSheet.Contents" parent="">
        <item name="android:minHeight">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Widget.AndroidAppTemplate.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="Widget.AndroidAppTemplate.TextInputLayout.OutlinedBox.EditText">
        <!--        <item name="boxCornerRadiusBottomEnd">8dp</item>-->
        <!--        <item name="boxCornerRadiusBottomStart">8dp</item>-->
        <!--        <item name="boxCornerRadiusTopEnd">8dp</item>-->
        <!--        <item name="boxCornerRadiusTopStart">8dp</item>-->
    </style>

    <style name="Widget.AndroidAppTemplate.TextInputLayout.OutlinedBox.EditText.Password">
        <item name="passwordToggleEnabled">true</item>
    </style>
</resources>